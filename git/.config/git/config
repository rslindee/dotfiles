[include]
  path = ~/.config/git/config-private
[alias]
  aa = add -A
  br = branch
  ca = commit --amend
  cp = cherry-pick
  co = checkout
  cl = clone --recursive
  cm = commit
  dc = diff --cached
  df = diff
  dr = push origin --delete
  fc = clean -ffxd
  fe = fetch --prune --tags --all
  la = log -1 --stat --patch
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset' --abbrev-commit --date=relative --all
  # list files modified in specific commit
  lf = diff-tree --no-commit-id --name-only -r
  pa = format-patch -1
  pf = push --force-with-lease
  pl = pull
  ps = push --set-upstream
  re = reset --hard HEAD
  ri = rebase --interactive
  ss = show --name-only
  st = status --short
  su = submodule update --init --recursive
  sw = switch
  un = reset HEAD~
[push]
  default = current
  recurseSubmodules = check
[core]
  trustctime = false
  editor = $EDITOR
  filemode = false
  autocrlf = input
[color]
  ui = true
[credential]
  helper = cache --timeout=3600
[merge]
  tool = nvimdiff
  conflictstyle = zdiff3
[mergetool]
  keeptemporaries = false
  keepBackup = false
  prompt = false
  trustexitcode = true
[diff]
  tool = nvimdiff
  colorMoved = default
  colorMovedWS = ignore-all-space
[submodule]
  #recurse = true
[pull]
  rebase = false
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
[color "diff-highlight"]
  oldNormal = "red black"
  oldHighlight = "black brightred"
  newNormal = "green black"
  newHighlight = "black brightgreen"
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[user]
	name = Richard Slindee
	email = rslindee@ford.com
